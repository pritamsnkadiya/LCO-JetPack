<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="settingView"
            type="com.example.lcogetpack.ui.ui.fragments.settings.SettingViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.SettingsFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/diemen_100dp"
                android:background="@mipmap/ic_uper_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/diemen_40dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_view"
                    android:layout_width="@dimen/diemen_110dp"
                    android:layout_height="@dimen/diemen_110dp"
                    android:src="@mipmap/ic_upload"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_overlay="true"
                    app:civ_border_width="@dimen/sp_2" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sahid Kapur"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="@dimen/diemen_0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_update_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:src="@mipmap/icon_edit_profile" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="start|center"
                            android:text="Edit Profile"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:src="@mipmap/icon_email" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="Email"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:src="@mipmap/icon_phone" />

                        <TextView
                            android:id="@+id/tv_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="Phone Number"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_training"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_tr_user" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="training session"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:src="@mipmap/icon_subs" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="Subscription Details"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_all_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/diemen_30dp"
                                android:layout_height="@dimen/diemen_30dp"
                                android:src="@mipmap/icon_more" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="All Notification's"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/diemen_30dp"
                                android:layout_height="@dimen/diemen_30dp"
                                android:src="@mipmap/icon_more" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="Friend's"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/diemen_30dp"
                                android:layout_height="@dimen/diemen_30dp"
                                android:src="@mipmap/icon_more" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="center|start"
                            android:text="Post"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/diemen_50dp"
                            android:layout_height="@dimen/diemen_50dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_logout" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/diemen_50dp"
                            android:layout_marginLeft="@dimen/sp_20"
                            android:gravity="start|center"
                            android:text="Logout"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_1"
                        android:background="@color/text_color" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>